<header
  id='header-nav'
  class='fixed w-full lg:w-screen flex justify-end md:justify-center py-6 z-10'
>
  <button id='open-button' class='mr-8 md:hidden'>
    <svg
      xmlns='http://www.w3.org/2000/svg'
      width='24'
      height='24'
      viewBox='0 0 24 24'
      fill='none'
      stroke='currentColor'
      stroke-width='2'
      stroke-linecap='round'
      stroke-linejoin='round'
      class='icon icon-tabler icons-tabler-outline icon-tabler-menu-2'
      ><path stroke='none' d='M0 0h24v24H0z' fill='none'></path><path
        d='M4 6l16 0'></path><path d='M4 12l16 0'></path><path d='M4 18l16 0'
      ></path></svg
    >
  </button>
  <button id='close-button' class='mr-8 hidden'>
    <svg
      xmlns='http://www.w3.org/2000/svg'
      width='24'
      height='24'
      viewBox='0 0 24 24'
      fill='none'
      stroke='currentColor'
      stroke-width='2'
      stroke-linecap='round'
      stroke-linejoin='round'
      class='icon icon-tabler icons-tabler-outline icon-tabler-x'
      ><path stroke='none' d='M0 0h24v24H0z' fill='none'></path><path
        d='M18 6l-12 12'></path><path d='M6 6l12 12'></path></svg
    >
  </button>
  <nav>
    <ul
      id='navbar'
      class='mx-auto hidden md:flex md:gap-24 lg:gap-48 uppercase font-medium text-white/75'
    >
      <li
        class='hover:text-white hover:scale-125 transition-all cursor-pointer'
      >
        <a href='#proceso'> Proceso </a>
      </li>
      <li
        class='hover:text-white hover:scale-125 transition-all cursor-pointer'
      >
        <a href='#galeria'> Galería </a>
      </li>
      <li
        class='hover:text-white hover:scale-125 transition-all cursor-pointer'
      >
        <a href='#opiniones'> Opiniones </a>
      </li>
      <li
        class='hover:text-white hover:scale-125 transition-all cursor-pointer'
      >
        <a href='#contacto'> Contacto </a>
      </li>
    </ul>
  </nav>
</header>

<style>
  @media (max-width: 768px) {
    ul {
      display: flex;
      flex-direction: column;
      align-items: center;
      gap: 24px;
      position: absolute;
      right: -220px;
      top: 64px;
      padding: 32px 64px;
      background-color: rgb(11 17 37 / 0.85);
      border: 2px solid rgb(11, 17, 37);
      border-radius: 16px;
      transition: 250ms ease-in-out;
    }

    .visible {
      transform: translateX(-232px);
    }
  }
</style>

<script>
  const openButton = document.querySelector("#open-button") as HTMLElement;
  const closeButton = document.querySelector("#close-button") as HTMLElement;
  const nav = document.querySelector("#navbar") as HTMLElement;
  const links = nav.querySelectorAll("a");

  // Función para el manejo de la NavBar
  function handleNavBar() {
    if (window.innerWidth < 768) {
      // Si el ancho es menor a 768 muestro el menú hamburguesa.
      openButton.style.display = "inline-block";
      closeButton.style.display = "none";

      // Eventos onClick para cada botón y los enlaces.
      openButton.addEventListener("click", openNavBar);
      closeButton.addEventListener("click", closeNavBar);
      links.forEach((link) => link.addEventListener("click", closeNavBar));
    } else {
      // Si el ancho es mayor a 768 no muestro los botones.
      openButton.style.display = "none";
      closeButton.style.display = "none";

      // Elimino los eventos onClick para que no se renderice el menú hamburguesa.
      openButton.removeEventListener("click", openNavBar);
      closeButton.removeEventListener("click", closeNavBar);
      links.forEach((link) => link.removeEventListener("click", closeNavBar));
    }
  }

  function openNavBar() {
    nav.classList.add("visible");
    openButton.style.display = "none";
    closeButton.style.display = "inline-block";
  }

  function closeNavBar() {
    nav.classList.remove("visible");
    closeButton.style.display = "none";
    openButton.style.display = "inline-block";
  }

  // Ejecuto la función al cargar la página
  handleNavBar();

  // Si se detecta un 'resize' vuelvo a ejecutar la función handleNavBar.
  window.addEventListener("resize", handleNavBar);
</script>
